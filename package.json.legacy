{
  "name": "forge-sdd-toolkit",
  "version": "0.1.0",
  "description": "Toolkit de context engineering para desenvolvimento Specification-Driven de apps Atlassian Forge",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "validate": "node dist/scripts/validations/validate-structure.js",
    "test": "echo \"Tests will be implemented in v0.2\" && exit 0",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "forge-sdd": "./bin/forge-sdd.js"
  },
  "files": [
    "bin/",
    "dist/",
    "structure/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "INSTALL.md"
  ],
  "keywords": [
    "atlassian",
    "forge",
    "specification-driven-development",
    "sdd",
    "context-engineering",
    "ai-assisted-development",
    "llm-orchestration",
    "jira",
    "confluence"
  ],
  "author": "VSALMEID",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4youtest-vsalmeida/forge-sdd-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/4youtest-vsalmeida/forge-sdd-toolkit/issues"
  },
  "homepage": "https://github.com/4youtest-vsalmeida/forge-sdd-toolkit#readme"
}
